//- layout.pug
html
	head
		include head
		link(rel='stylesheet' href='/css/sign-in.css')

	body

		form.form-signin(method='POST' action='/sign-in')
			.column
				.row
					label(for="inputLogin") Login
					input#inputLogin.u-full-width(type='text' name='login' placeholder='Login' required autofocus autocomplete)
				.row
					label(for="inputPassword") Password
					input#inputPassword.u-full-width(type='password' name='password' placeholder='Password' required autocomplete)
			input.button-primary(type="submit" value="Sign in")
			input(type='hidden', name='_csrf', value=csrf)
			if error
				.text-error #{error}
